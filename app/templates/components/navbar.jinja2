{% macro navbar(current_user) %}
<!-- Fuentes -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap"
    rel="stylesheet">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<!-- AOS Animaciones -->
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<!-- Tus estilos -->
<link rel="stylesheet" href="{{ url_for('static', filename='css/style_navbar.css') }}">
<style>
    /* Estilos para badges de notificaci√≥n */
    .nav-badge {
        position: absolute;
        top: -8px;
        right: -12px;
        background: linear-gradient(135deg, #ff4444 0%, #cc0000 100%);
        color: white;
        border-radius: 50%;
        width: 22px;
        height: 22px;
        display: none;
        align-items: center;
        justify-content: center;
        font-size: 11px;
        font-weight: bold;
        box-shadow: 0 2px 8px rgba(255, 68, 68, 0.4);
        border: 2px solid white;
        z-index: 10;
    }
    
    .pulse-animation {
        animation: pulse 0.6s ease-in-out;
    }
    
    @keyframes pulse {
        0%, 100% {
            transform: scale(1);
        }
        50% {
            transform: scale(1.2);
        }
    }
    
    .nav-links a {
        position: relative;
    }
</style>

<!-- NAVBAR -->
<header class="navbar">
    <div class="logo">
        <h1>WorkLink</h1>
    </div>
    <nav class="nav-links">
        <a href="{{ url_for('InicioRoute.inicio') }}">Inicio</a>
        <a href="{{ url_for('EmpleosRoute.empleos') }}">Empleos</a>

        <a href="{{ url_for('MensajesRoute.mensajes') }}">
            Mensajes
            <span id="badge-mensajes" class="nav-badge" {% if mensajes_no_leidos and mensajes_no_leidos > 0 %}style="display: flex;"{% endif %}>
                {{ mensajes_no_leidos if mensajes_no_leidos else 0 }}
            </span>
        </a>
        <a href="{{ url_for('NotificacionesRoute.notificaciones') }}">
            Notificaciones
            <span id="badge-notificaciones" class="nav-badge"></span>
        </a>
        <a href="{{ url_for('PlanesRoute.planes') }}">Planes</a>

        <a href="{{ url_for('PerfilRoute.editar') }}">Perfil</a>
        <a href="{{ url_for('LoginRoute.logout') }}" class="btn-logout">Salir</a>

    </nav>
</header>

<script src="{{ url_for('static', filename='js/navbar.js') }}"></script>
<script src="{{ url_for('static', filename='js/notificaciones_tiempo_real.js') }}"></script>

{% endmacro %}