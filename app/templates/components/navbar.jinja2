{% macro navbar(titulo, pagina, current_user) %}
<link rel="stylesheet" href="{{ url_for('static', filename='css/style_navbar.css') }}">
<header>
    <nav class="navbar">
        <div class="logo-placeholder"></div>

        <div class="menu-icons">
            <div class="icon-item">
                <a href="{{ url_for('IndexRoute.inicio') }}" style="text-decoration: none; color: inherit;">
                    <span>🏠</span><br><span>Inicio</span>
                </a>
            </div>
            <div class="icon-item">
                <a href="{{ url_for('IndexRoute.empleos') }}" style="text-decoration: none; color: inherit;">
                    <span>👥</span><br><span>Empleos</span>
                </a>
            </div>
            <div class="icon-item">
                <a href="{{ url_for('IndexRoute.mensajes') }}" style="text-decoration: none; color: inherit;">
                    <span>💬</span><br><span>Mensajes</span>
                </a>
            </div>
            <div class="icon-item">
                <a href="{{ url_for('IndexRoute.notificaciones') }}" style="text-decoration: none; color: inherit;">
                    <span>🔔</span><br><span>Notificaciones</span>
                </a>
            </div>

            <div class="icon-item">
                <a href="{{ url_for('IndexRoute.planes') }}" style="text-decoration: none; color: inherit;">
                    <span>💼</span><br><span>Planes</span>
                </a>
            </div>

            <div class="icon-item">
                <a href="{{ url_for('IndexRoute.logout') }}" style="text-decoration: none; color: inherit;">
                    <span>🚪</span><br><span>Salir</span>
                </a>
            </div>
        </div>

        {% if current_user %}
        <details class="usuario-dropdown">
            <summary>{{ current_user.correo }}</summary>
            <ul>
                <li><a href="{{ url_for('IndexRoute.logout') }}">Cerrar Sesión</a></li>
            </ul>
        </details>
        {% endif %}

    </nav>
</header>

{% endmacro %}