{% macro navbar(current_user) %}
<!-- NAVBAR -->
<header class="navbar">
    <div class="logo">
        <h1>WorkLink</h1>
    </div>
    <nav class="nav-links">
        <a href="{{ url_for('InicioRoute.inicio') }}">Inicio</a>
        <a href="{{ url_for('EmpleosRoute.empleos') }}">Empleos</a>

        <a href="{{ url_for('MensajesRoute.mensajes') }}">
            Mensajes
            <span id="badge-mensajes" class="nav-badge" {% if mensajes_no_leidos and mensajes_no_leidos > 0 %}style="display: flex;"{% endif %}>
                {{ mensajes_no_leidos if mensajes_no_leidos else 0 }}
            </span>
        </a>
        <a href="{{ url_for('NotificacionesRoute.notificaciones') }}">
            Notificaciones
            <span id="badge-notificaciones" class="nav-badge"></span>
        </a>
        <a href="{{ url_for('PlanesRoute.planes') }}">Planes</a>

        <a href="{{ url_for('LoginRoute.logout') }}" class="btn-logout">Salir</a>

        <a href="{{ url_for('PerfilRoute.editar') }}" class="nav-profile">
            <div class="nav-profile-photo">
                {% if current_user and current_user.foto_perfil %}
                    <img src="{{ current_user.foto_perfil }}" alt="Foto de perfil" class="profile-photo">
                {% else %}
                    <div class="profile-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                {% endif %}
            </div>
            <div class="nav-profile-info">
                <span class="profile-name">{{ current_user.nombre if current_user else 'Invitado' }}</span>
            </div>
        </a>
    </nav>
</header>

<script src="{{ url_for('static', filename='js/notificaciones_tiempo_real.js') }}"></script>
<script src="{{ url_for('static', filename='js/navbar.js') }}"></script>

{% endmacro %}