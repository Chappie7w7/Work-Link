{% macro footer() %}
<!-- Fuentes -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap"
    rel="stylesheet">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<!-- AOS Animaciones -->
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<!-- Tus estilos -->
<link rel="stylesheet" href="{{ url_for('static', filename='css/style_footer.css') }}">

<!-- FOOTER CON CONTACTO -->
<footer class="footer">
    <div class="footer-wave"></div>
    <div class="footer-content">
        <div class="footer-section" data-aos="fade-up" data-aos-delay="100">
            <div class="footer-logo">
                <h4>WorkLink Ocosingo</h4>
                <p>Conectando talento local con las mejores oportunidades laborales de la región.</p>
            </div>
            <div class="social-links">
                <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                <a href="#" class="social-link"><i class="fab fa-linkedin-in"></i></a>
                <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
        <div class="footer-section" data-aos="fade-up" data-aos-delay="200">
            <h4>Enlaces Rápidos</h4>
            <ul class="footer-links">
                <li><a href="#servicios"><i class="fas fa-chevron-right"></i> Servicios</a></li>
                <li><a href="#vacantes"><i class="fas fa-chevron-right"></i> Vacantes</a></li>
                <li><a href="#empresas"><i class="fas fa-chevron-right"></i> Empresas</a></li>
                <li><a href="#testimonios"><i class="fas fa-chevron-right"></i> Testimonios</a></li>
                <li><a href="{{ url_for('LoginRoute.login_form') }}"><i class="fas fa-chevron-right"></i> Iniciar
                        Sesión</a></li>
            </ul>
        </div>
        <div class="footer-section" data-aos="fade-up" data-aos-delay="300">
            <h4>Contacto</h4>
            <div class="contact-info">
                <div class="contact-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>Ocosingo, Chiapas, México</span>
                </div>
                <div class="contact-item">
                    <i class="fas fa-phone"></i>
                    <span>+52 919 123 4567</span>
                </div>
                <div class="contact-item">
                    <i class="fas fa-envelope"></i>
                    <span>contacto@worklinkocosingo.com</span>
                </div>
                <div class="contact-item">
                    <i class="fas fa-clock"></i>
                    <span>Lun - Vie: 8:00 - 18:00</span>
                </div>
            </div>
        </div>
        <div class="footer-section footer-contact" data-aos="fade-up" data-aos-delay="400">
            <h4>¿Necesitas ayuda?</h4>
            <p>Escríbenos y te responderemos en menos de 24 horas.</p>
            <form class="contact-form-footer">
                <div class="form-group">
                    <input type="text" placeholder="Tu nombre" required>
                </div>
                <div class="form-group">
                    <input type="email" placeholder="Tu correo" required>
                </div>
                <div class="form-group">
                    <textarea placeholder="Tu mensaje" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn-main">
                    <i class="fas fa-paper-plane"></i>
                    Enviar mensaje
                </button>
            </form>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="footer-bottom-content">
            <p class="copy">© 2025 WorkLink Ocosingo. Todos los derechos reservados.</p>
            <div class="footer-bottom-links">
                <a href="#">Política de Privacidad</a>
                <a href="#">Términos y Condiciones</a>
                <a href="#">Cookies</a>
            </div>
        </div>
    </div>
</footer>

{% endmacro %}