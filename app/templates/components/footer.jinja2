{% macro footer() %}
<!-- Fuentes -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap"
    rel="stylesheet">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<!-- AOS Animaciones -->
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<!-- Tus estilos -->
<link rel="stylesheet" href="{{ url_for('static', filename='css/style_footer.css') }}">

<!-- FOOTER CON CONTACTO -->
<footer class="footer">
    <div class="footer-wave"></div>
    <div class="footer-content">
        <div class="footer-section" data-aos="fade-up" data-aos-delay="100">
            <div class="footer-logo">
                <h4>WorkLink Ocosingo</h4>
                <p>Conectando talento local con las mejores oportunidades laborales de la región.</p>
            </div>
            <div class="social-links">
                <a href="#" class="social-link"><i class="fab fa-facebook-f"></i></a>
                <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                <a href="#" class="social-link"><i class="fab fa-linkedin-in"></i></a>
                <a href="#" class="social-link"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
        <div class="footer-section" data-aos="fade-up" data-aos-delay="200">
            <h4>Testimonios</h4>
            <p>¿Quieres que tu historia aparezca en la sección principal? Cuéntanos qué tal te fue con WorkLink.</p>
            {% if session.get('usuario') %}
            <form action="{{ url_for('InicioRoute.guardar_testimonio') }}" method="post" class="testimonial-form-footer">
                <textarea name="mensaje" rows="3" maxlength="500" placeholder="Escribe tu testimonio" required></textarea>
                <input type="text" name="cargo" maxlength="100" placeholder="Cargo / rol (opcional)">
                <input type="text" name="empresa" maxlength="120" placeholder="Empresa (opcional)">
                <button type="submit" class="btn-main">
                    <i class="fas fa-share"></i>
                    Enviar testimonio
                </button>
            </form>
            {% else %}
            <p class="testimonial-cta">Inicia sesión para compartir tu historia y que se muestre aquí.</p>
            <a href="{{ url_for('LoginRoute.login_form') }}" class="btn-outline">
                <i class="fas fa-sign-in-alt"></i> Iniciar sesión
            </a>
            {% endif %}
        </div>
        <div class="footer-section" data-aos="fade-up" data-aos-delay="300">
            <h4>Contacto</h4>
            <div class="contact-info">
                <div class="contact-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>Ocosingo, Chiapas, México</span>
                </div>
                <div class="contact-item">
                    <i class="fas fa-phone"></i>
                    <span>+52 919 123 4567</span>
                </div>
                <div class="contact-item">
                    <i class="fas fa-envelope"></i>
                    <span>contacto@worklinkocosingo.com</span>
                </div>
                <div class="contact-item">
                    <i class="fas fa-clock"></i>
                    <span>Lun - Vie: 8:00 - 18:00</span>
                </div>
            </div>
        </div>
        <div class="footer-section footer-contact" data-aos="fade-up" data-aos-delay="400">
            <h4>¿Necesitas ayuda?</h4>
            <p>Escríbenos y te responderemos en menos de 24 horas.</p>
            <form class="contact-form-footer" action="{{ url_for('IndexRoute.contacto') }}" method="post">
                <div class="form-group">
                    <input type="text" name="nombre" placeholder="Tu nombre" required>
                </div>
                <div class="form-group">
                    <input type="email" name="correo" placeholder="Tu correo" required>
                </div>
                <div class="form-group">
                    <textarea name="mensaje" placeholder="Tu mensaje" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn-main">
                    <i class="fas fa-paper-plane"></i>
                    Enviar mensaje
                </button>
            </form>
        </div>
    </div>
    <div class="footer-bottom">
        <div class="footer-bottom-content">
            <p class="copy"> 2025 WorkLink Ocosingo. Todos los derechos reservados.</p>
            <div class="footer-bottom-links">
                <a href="#">Política de Privacidad</a>
                <a href="#">Términos y Condiciones</a>
                <a href="#">Cookies</a>
            </div>
        </div>
    </div>
</footer>

{% endmacro %}