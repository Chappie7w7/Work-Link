{% macro navbar(empresa, usuario_empresa) %}
<!-- Fuentes -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap"
    rel="stylesheet">
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
<!-- AOS Animaciones -->
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<!-- Tus estilos -->
<link rel="stylesheet" href="{{ url_for('static', filename='css/style_navbar.css') }}">
<!-- NAVBAR -->
<!-- Navigation Bar con mismo diseño/animación que el navbar principal -->
<header class="navbar">
    <div class="logo">
        <h1>WorkLink</h1>
    </div>
    <nav class="nav-links">
        <a href="{{ url_for('rt_empresa.dashboard') }}">Dashboard</a>
        <a href="{{ url_for('rt_empresa.mensajes_empresa') }}" style="position: relative;">
            <span>Mensajes</span>
            <span id="badge-mensajes-header" class="nav-badge" style="display: none;"></span>
        </a>
        <a href="{{ url_for('rt_empresa.notificaciones_empresa') }}" style="position: relative;">
            <span>Notificaciones</span>
            <span id="badge-notificaciones-header" class="nav-badge" style="display: none;"></span>
        </a>

        <a href="{{ url_for('IndexRoute.index') }}" class="btn-logout">
            <i class="fas fa-sign-out-alt"></i> Salir
        </a>

        <a href="{{ url_for('rt_empresa.editar_perfil') }}" class="nav-profile">
            <div class="nav-profile-photo">
                {% if empresa and empresa.logo_url %}
                    <img src="{{ empresa.logo_url }}" alt="Logo de {{ empresa.nombre_empresa }}" class="profile-photo">
                {% else %}
                    <div class="profile-avatar">
                        <i class="fas fa-building"></i>
                    </div>
                {% endif %}
            </div>
            <div class="nav-profile-info">
                <span class="profile-name">
                    {% if empresa and empresa.nombre_empresa %}
                        {{ empresa.nombre_empresa }}
                    {% elif usuario_empresa and usuario_empresa.nombre %}
                        {{ usuario_empresa.nombre }}
                    {% else %}
                        Mi Empresa
                    {% endif %}
                </span>
            </div>
        </a>
    </nav>
</header>

<script src="{{ url_for('static', filename='js/navbar.js') }}"></script>

{% endmacro %}