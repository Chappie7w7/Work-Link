{% import "components/navbar.jinja2" as components %}
{% import 'components/footer.jinja2' as footer %}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Planes</title>
    <style>
        body {
            margin: 0;
            font-family: sans-serif;
        }

        .planes-container {
            text-align: center;
            padding: 40px 20px;
        }

        .planes-title {
            font-weight: bold;
            font-size: 24px;
            margin-bottom: 40px;
        }

        .plan-row {
            display: flex;
            justify-content: center;
            gap: 40px;
            flex-wrap: wrap;
        }

        .plan-card {
            background-color: #d9d9d9;
            border-radius: 15px;
            padding: 30px 20px;
            width: 280px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .plan-title {
            font-weight: bold;
            font-size: 20px;
            margin-bottom: 10px;
        }

        .plan-icon {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .plan-line {
            background-color: #bbb;
            height: 20px;
            border: none;
            margin: 8px 0;
            border-radius: 4px;
        }

        .plan-button {
            background-color: #e6e6e6;
            border: 1px solid #aaa;
            border-radius: 20px;
            padding: 8px 20px;
            font-weight: bold;
            margin-top: 20px;
            width: 100%;
            cursor: pointer;
            transition: background 0.3s;
        }

        .plan-button:hover {
            background-color: #ccc;
        }
    </style>
</head>
<body>

    {{ components.navbar("planes", "planes", current_user) }}

    <div class="planes-container">
        <h2 class="planes-title">Contamos con tres planes</h2>

        <div class="plan-row">
            <!-- Plan Gratuito -->
            <div class="plan-card">
                <div class="plan-title">Gratuito</div>
                <div class="plan-icon">$</div>
                <div class="plan-line"></div>
                <button class="plan-button">continuar</button>
            </div>

            <!-- Plan BÃ¡sico -->
            <div class="plan-card">
                <div class="plan-title">Basico</div>
                <div class="plan-icon">$</div>
                <div class="plan-line"></div>
                <div class="plan-line"></div>
                <div class="plan-line"></div>
                <div class="plan-line"></div>
                <button class="plan-button">Obtener</button>
            </div>

            <!-- Plan Premium -->
            <div class="plan-card">
                <div class="plan-title">Premium</div>
                <div class="plan-icon">$</div>
                <div class="plan-line"></div>
                <div class="plan-line"></div>
                <div class="plan-line"></div>
                <div class="plan-line"></div>
                <div class="plan-line"></div>
                <div class="plan-line"></div>
                <button class="plan-button">Obtener</button>
            </div>
        </div>
    </div>

    {{ footer.footer() }}
</body>
</html>

