{% import "components/navbar.jinja2" as components %}
{% import 'components/footer.jinja2' as footer %}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notificaciones - WorkLink</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style_notificaciones.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body>
    {{ components.navbar(current_user) }}
    
    <!-- Main Content -->
    <div class="main-container">
        <div class="page-header">
            <h2 class="page-title">
                <i class="fas fa-bell"></i> Notificaciones
            </h2>
            <p class="page-subtitle">Mantente al día con el estado de tus postulaciones</p>
            
            {% if notificaciones and no_leidas > 0 %}
            <div class="notifications-header-actions">
                <span class="unread-badge">
                    <i class="fas fa-circle"></i> {{ no_leidas }} sin leer
                </span>
                <form action="{{ url_for('NotificacionesRoute.marcar_todas_leidas') }}" method="POST" style="display: inline;">
                    <button type="submit" class="btn-action-primary">
                        <i class="fas fa-check-double"></i> Marcar todas como leídas
                    </button>
                </form>
                <form action="{{ url_for('NotificacionesRoute.eliminar_todas') }}" method="POST" style="display: inline;" onsubmit="return confirm('¿Estás seguro de eliminar todas las notificaciones?');">
                    <button type="submit" class="btn-action-danger">
                        <i class="fas fa-trash"></i> Eliminar todas
                    </button>
                </form>
            </div>
            {% endif %}
        </div>

        <!-- Notifications List -->
        {% if notificaciones %}
        <div class="notifications-list">
            {% for notif in notificaciones %}
            <div class="notification-card {% if not notif.leido %}notification-unread{% endif %}">
                <div class="notification-content">
                    <div class="notification-icon notification-icon-{{ notif.tipo }}">
                        {% if notif.tipo == 'contratado' %}
                            <i class="fas fa-check-circle"></i>
                        {% elif notif.tipo == 'en_proceso' %}
                            <i class="fas fa-clock"></i>
                        {% elif notif.tipo == 'visto' %}
                            <i class="fas fa-eye"></i>
                        {% elif notif.tipo == 'rechazado' %}
                            <i class="fas fa-times-circle"></i>
                        {% elif notif.tipo == 'mensaje' %}
                            <i class="fas fa-envelope"></i>
                        {% else %}
                            <i class="fas fa-bell"></i>
                        {% endif %}
                    </div>
                    <div class="notification-text">
                        <p class="notification-message">{{ notif.mensaje }}</p>
                        <span class="notification-date">
                            <i class="far fa-calendar-alt"></i> 
                            {{ notif.fecha_envio.strftime('%d/%m/%Y %H:%M') if notif.fecha_envio else 'Fecha desconocida' }}
                        </span>
                    </div>
                </div>
                {% if not notif.leido %}
                <form action="{{ url_for('NotificacionesRoute.marcar_leida', notificacion_id=notif.id) }}" method="POST">
                    <button type="submit" class="btn-mark-read" title="Marcar como leída">
                        <i class="fas fa-check"></i>
                    </button>
                </form>
                {% else %}
                <div class="read-indicator">
                    <i class="fas fa-check-circle"></i>
                </div>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        {% else %}
        <div class="empty-state">
            <div class="empty-icon">
                <i class="far fa-bell-slash"></i>
            </div>
            <h3>No tienes notificaciones</h3>
            <p>Cuando las empresas actualicen el estado de tus postulaciones, aparecerán aquí.</p>
        </div>
        {% endif %}
    </div>

    <!-- Llamar al componente footer -->
    {{ footer.footer() }}
    
    <script src="{{ url_for('static', filename='js/notificaciones_tiempo_real.js') }}"></script>
    <script>
        AOS.init();
    </script>
</body>
</html>
