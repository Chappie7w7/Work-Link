{% import "components/navbar.jinja2" as components %}
{% import 'components/footer.jinja2' as footer %}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Notificaciones</title>
    <style>
        body {
            margin: 0;
            font-family: sans-serif;
        }

        .container {
            padding: 20px;
        }

        h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .filtros {
            display: flex;
            gap: 15px;
            margin-bottom: 25px;
        }

        .filtro-btn {
            padding: 10px 20px;
            border-radius: 20px;
            border: 1px solid #777;
            background-color: #e5e5e5;
            font-weight: bold;
            cursor: pointer;
        }

        .notificacion {
            display: flex;
            align-items: center;
            justify-content: space-between;
            border: 1px solid #777;
            border-radius: 10px;
            padding: 15px 20px;
            margin-bottom: 15px;
        }

        .notificacion .icono {
            font-size: 28px;
        }

        .notificacion button {
            background-color: #e5e5e5;
            border: 1px solid #777;
            border-radius: 20px;
            padding: 8px 16px;
            font-weight: bold;
            cursor: pointer;
        }
    </style>
</head>
<body>

    {{ components.navbar("notificaciones", "notificaciones", current_user) }}

    <div class="container">
        <h2>Notificaciones</h2>

        <div class="filtros">
            <button class="filtro-btn">Todo</button>
            <button class="filtro-btn">Vacantes</button>
            <button class="filtro-btn">Estado</button>
        </div>

        <div class="notificacion">
            <div class="icono">✅</div>
            <button>ver vacante</button>
        </div>

        <div class="notificacion">
            <div class="icono">➡️</div>
            <button>ver estado</button>
        </div>

        <div class="notificacion">
            <div class="icono">⭐</div>
            <button>ver detalles</button>
        </div>
    </div>
{{ footer.footer() }}
</body>
</html>
