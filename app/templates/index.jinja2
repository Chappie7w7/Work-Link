{% import "components/navbar_index.jinja2" as navbar_inicio %}
{% import "components/footer.jinja2" as footer %}
{% import "components/flash_messages.jinja2" as flash %}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WorkLink Ocosingo | Encuentra tus empleo ideal en Ocosingo</title>
    
    <!-- PWA Meta Tags -->
    <link rel="manifest" href="{{ url_for('static', filename='manifest.json') }}">
    <meta name="theme-color" content="#2563eb">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ url_for('static', filename='icons/icon-192x192.png') }}">
    <link rel="icon" type="image/png" sizes="192x192" href="{{ url_for('static', filename='icons/icon-192x192.png') }}">
    <link rel="apple-touch-icon" sizes="180x180" href="{{ url_for('static', filename='icons/icon-192x192.png') }}">
    
    <!-- Tus estilos -->
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style_index.css') }}">

</head>

<body>

    <!-- NAVBAR -->
    {{ navbar_inicio.navbar() }}
    {{ flash.render_flash_messages() }}

    <!-- HERO -->
    <section id="informacion" class="hero">
        <div class="hero-overlay"></div>
        <div class="hero-particles"></div>
        <div class="hero-content" data-aos="fade-up" data-aos-duration="1000">
            <div class="hero-badge" data-aos="fade-up" data-aos-delay="200">
                <i class="fas fa-map-marker-alt"></i>
                <span>Ocosingo, Chiapas</span>
            </div>
            <h1 class="hero-title" data-aos="fade-up" data-aos-delay="400">
                Encuentra tu <span class="highlight">empleo ideal</span> en Ocosingo
            </h1>
            <p class="hero-subtitle" data-aos="fade-up" data-aos-delay="600">
                Conectamos talento local con las mejores oportunidades laborales de la región.
                ¡Más de 500 empleos disponibles en Ocosingo!
            </p>
            <div class="hero-stats" data-aos="fade-up" data-aos-delay="800">
                <div class="stat">
                    <span class="stat-number">500+</span>
                    <span class="stat-label">Empleos</span>
                </div>
                <div class="stat">
                    <span class="stat-number">150+</span>
                    <span class="stat-label">Empresas</span>
                </div>
                <div class="stat">
                    <span class="stat-number">95%</span>
                    <span class="stat-label">Éxito</span>
                </div>
            </div>
            <div class="hero-buttons" data-aos="fade-up" data-aos-delay="1000">
                <a href="#vacantes" class="btn-main">
                    <i class="fas fa-search"></i>
                    Buscar Empleo
                </a>
                <a href="{{ url_for('LoginRoute.form_empresa') }}" class="btn-outline">
                    <i class="fas fa-plus"></i>
                    Publicar Vacante
                </a>
            </div>
        </div>
        <div class="scroll-indicator" data-aos="fade-up" data-aos-delay="1200">
            <div class="scroll-arrow">
                <i class="fas fa-chevron-down"></i>
            </div>
        </div>
    </section>

    <!-- SERVICIOS -->
    <section id="servicios" class="container servicios-section">
        <div class="section-header" data-aos="fade-up">
            <h2>¿Por qué elegir WorkLink Ocosingo?</h2>
            <p>Somos la plataforma líder en empleos de la región</p>
        </div>
        <div class="servicios-grid">
            <div class="card" data-aos="fade-up" data-aos-delay="100">
                <div class="card-icon">
                    <i class="fas fa-users"></i>
                </div>
                <h3>Empleos Locales</h3>
                <p>Conectamos talento de Ocosingo con empresas de la región. Más de 500 oportunidades laborales
                    disponibles.</p>
            </div>
            <div class="card" data-aos="fade-up" data-aos-delay="200">
                <div class="card-icon">
                    <i class="fas fa-rocket"></i>
                </div>
                <h3>Proceso Rápido</h3>
                <p>Encuentra empleo en menos de 48 horas. Nuestro sistema inteligente te conecta con las mejores
                    oportunidades.</p>
            </div>
            <div class="card" data-aos="fade-up" data-aos-delay="300">
                <div class="card-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>100% Confiable</h3>
                <p>Todas las empresas están verificadas. Trabajamos solo con empresas serias y comprometidas con el
                    desarrollo local.</p>
            </div>
            <div class="card" data-aos="fade-up" data-aos-delay="400">
                <div class="card-icon">
                    <i class="fas fa-graduation-cap"></i>
                </div>
                <h3>Desarrollo Profesional</h3>
                <p>Accede a cursos y capacitaciones para mejorar tus habilidades y crecer profesionalmente en Ocosingo.
                </p>
            </div>
        </div>
    </section>

    <!-- VACANTES DESTACADAS -->
    <section id="vacantes" class="container vacantes-section">
        <div class="section-header" data-aos="fade-up">
            <h2>Empleos destacados en Ocosingo</h2>
            <p>Las mejores oportunidades laborales de la región</p>
        </div>
        <div class="vacantes-grid">
            {% if jobs %}
            {% for v in jobs %}
            <div class="vacante-card" data-aos="fade-up" data-aos-delay="{{ loop.index * 100 }}">
                <div class="vacante-header">
                    <div
                        class="vacante-badge {% if loop.index == 1 %}urgent{% elif loop.index == 2 %}new{% elif loop.index == 3 %}featured{% endif %}">
                        {% if loop.index == 1 %}Urgente{% elif loop.index == 2 %}Nuevo{% elif loop.index == 3
                        %}Destacado{% else %}Disponible{% endif %}
                    </div>
                    <div class="vacante-location">
                        <i class="fas fa-map-marker-alt"></i>
                        {{ v.ubicacion or "Ocosingo, Chiapas" }}
                    </div>
                </div>
                <h3>{{ v.titulo }}</h3>
                <p class="vacante-company">{{ v.empresa.nombre_empresa if v.empresa else "Empresa Local" }}</p>
                <div class="vacante-details">
                    <span class="detail"><i class="fas fa-clock"></i> {{ v.modalidad or "Tiempo completo" }}</span>
                    {% if v.salario_aprox %}
                    <span class="detail"><i class="fas fa-dollar-sign"></i> ${{ "%.0f"|format(v.salario_aprox) }}</span>
                    {% endif %}
                    <span class="detail"><i class="fas fa-user"></i> {{ v.estado or "Sin experiencia" }}</span>
                </div>
                <a href="#" class="btn-small"
                    onclick="openModal('{{ v.titulo|escape }}', '{{ v.descripcion|escape }}', '{{ v.empresa.nombre_empresa|default('Empresa Local')|escape }}', '{{ v.empresa.logo_url|default(url_for('static', filename='img/default-company.png')) }}', '')">
                    <i class="fas fa-eye"></i>
                    Ver detalles
                </a>
            </div>
            {% endfor %}
            {% else %}
            
            {% endif %}
        </div>
        <div class="vacantes-cta" data-aos="fade-up" data-aos-delay="500">
            <a href="{{ url_for('EmpleosRoute.empleos') }}" class="btn-main">
                <i class="fas fa-search"></i>
                Ver todas las vacantes
            </a>
        </div>
    </section>

    <!-- EMPRESAS -->
    <section id="empresas" class="empresas-section">
        <div class="container">
            <div class="section-header" data-aos="fade-up">
                <h2>Empresas líderes en Ocosingo</h2>
                <p>Más de 150 empresas confían en WorkLink para encontrar el mejor talento</p>
            </div>

            <div class="empresas-showcase">
                <div class="empresa-featured" data-aos="fade-right" data-aos-delay="200">
                    <div class="empresa-info">
                        <h3>Construcciones del Sur</h3>
                        <p>Empresa líder en construcción en la región de Ocosingo</p>
                        <div class="empresa-stats">
                            <span><i class="fas fa-users"></i> 50+ empleados</span>
                            <span><i class="fas fa-calendar"></i> 15 años</span>
                        </div>
                    </div>
                    <div class="empresa-logo">
                        <img src="{{ url_for('static', filename='img/OIP.jpg') }}" alt="Construcciones del Sur">
                    </div>
                </div>

                <div class="empresas-logos" data-aos="fade-up" data-aos-delay="400">
                    <div class="logo-item">
                        <img src="{{ url_for('static', filename='img/pag13b.jpeg') }}" alt="Tech Solutions">
                        <span>Tech Solutions</span>
                    </div>
                    <div class="logo-item">
                        <img src="{{ url_for('static', filename='img/OIP.jpg') }}" alt="Creative Agency">
                        <span>Creative Agency</span>
                    </div>
                    <div class="logo-item">
                        <img src="{{ url_for('static', filename='img/OIP.jpg') }}" alt="Oficina Municipal">
                        <span>Oficina Municipal</span>
                    </div>
                    <div class="logo-item">
                        <img src="{{ url_for('static', filename='img/pag13b.jpeg') }}" alt="Comercial del Sur">
                        <span>Comercial del Sur</span>
                    </div>
                </div>

                <div class="empresas-stats" data-aos="fade-up" data-aos-delay="600">
                    <div class="stat-item">
                        <div class="stat-number">150+</div>
                        <div class="stat-label">Empresas Activas</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">500+</div>
                        <div class="stat-label">Empleos Publicados</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-number">95%</div>
                        <div class="stat-label">Tasa de Éxito</div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- TESTIMONIOS -->
    <section id="testimonios" class="testimonios-section">
        <div class="container">
            <div class="section-header" data-aos="fade-up">
                <h2>Historias de éxito reales</h2>
                <p>Conoce las experiencias de quienes han encontrado su empleo ideal en Ocosingo</p>
            </div>

            {% if testimonios %}
                {% set destacado = testimonios[0] %}
                <div class="testimonios-showcase">
                    <div class="testimonio-featured" data-aos="fade-left" data-aos-delay="200">
                        <div class="testimonio-content">
                            <div class="quote-icon">
                                <i class="fas fa-quote-left"></i>
                            </div>
                            <blockquote>
                                {{ destacado.mensaje }}
                            </blockquote>
                            <div class="testimonio-author">
                                <div class="author-avatar">
                                    {% if destacado.usuario and destacado.usuario.foto_perfil %}
                                        <img src="{{ destacado.usuario.foto_perfil }}" alt="{{ destacado.nombre }}">
                                    {% else %}
                                        <img src="{{ url_for('static', filename='img/profile_picture.png') }}" alt="{{ destacado.nombre }}">
                                    {% endif %}
                                </div>
                                <div class="author-info">
                                    <h4>{{ destacado.nombre }}</h4>
                                    <p>
                                        {% if destacado.usuario and destacado.usuario.tipo_usuario %}
                                            {{ destacado.usuario.tipo_usuario }}
                                        {% else %}
                                            {{ destacado.cargo if destacado.cargo else 'Miembro de WorkLink' }}
                                        {% endif %}
                                        {% if destacado.empresa %}- {{ destacado.empresa }}{% endif %}
                                    </p>
                                    <div class="rating">
                                        {% for _ in range(5) %}
                                            <i class="fas fa-star"></i>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% if testimonios|length > 1 %}
                        <div class="testimonios-grid" data-aos="fade-up" data-aos-delay="400">
                            {% for testimonio in testimonios[1:4] %}
                                <div class="testimonio-item">
                                    <div class="testimonio-text">
                                        <p>{{ testimonio.mensaje }}</p>
                                    </div>
                                    <div class="testimonio-meta">
                                        <div class="author-avatar-small">
                                            {% if testimonio.usuario and testimonio.usuario.foto_perfil %}
                                                <img src="{{ testimonio.usuario.foto_perfil }}" alt="{{ testimonio.nombre }}">
                                            {% else %}
                                                <img src="{{ url_for('static', filename='img/profile_picture.png') }}" alt="{{ testimonio.nombre }}">
                                            {% endif %}
                                        </div>
                                        <div class="author-details">
                                            <h5>{{ testimonio.nombre }}</h5>
                                            <span>
                                                {% if testimonio.usuario and testimonio.usuario.tipo_usuario %}
                                                    {{ testimonio.usuario.tipo_usuario }}
                                                {% else %}
                                                    {{ testimonio.cargo if testimonio.cargo else 'Usuario registrado' }}
                                                {% endif %}
                                                {% if testimonio.empresa %}- {{ testimonio.empresa }}{% endif %}
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% endif %}

                    <div class="testimonios-cta" data-aos="fade-up" data-aos-delay="600">
                        <div class="cta-content">
                            <h3>¿Listo para escribir tu historia de éxito?</h3>
                            <p>Comparte tu experiencia desde tu panel de usuario</p>
                            <a href="{{ url_for('InicioRoute.inicio') }}" class="btn-main">
                                <i class="fas fa-user-plus"></i>
                                Compartir testimonio
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="testimonios-showcase">
                    <div class="cta-content">
                        <h3>¿Quieres inspirar a otros con tu historia?</h3>
                        <p>Aún no hay testimonios publicados, sé el primero en redactar el tuyo desde el pie de página.</p>
                    </div>
                </div>
            {% endif %}
        </div>
    </section>

    {{ footer.footer() }}

    <!-- MODAL -->
    <div id="jobModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <span id="modalTitle">Vacante</span>
                <span class="close" onclick="closeModal()">&times;</span>
            </div>

            <div class="modal-body">
                <div class="modal-company-row">
                    <div class="modal-company">
                        <img id="modalEmpresaLogo" src="{{ url_for('static', filename='img/default-company.png') }}"
                            alt="Logo empresa">
                        <span id="modalEmpresaName">Empresa</span>
                    </div>
                </div>

                <div class="modal-description-box">
                    <p id="modalDesc">Descripción de la vacante...</p>
                </div>

                <div class="modal-footer">
                    <a href="#" class="modal-btn">Postular</a>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Inicializar AOS
        AOS.init({
            duration: 1000,
            once: true,
            offset: 100
        });

        // Smooth scroll para enlaces internos
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Animación de partículas en el hero
        function createParticles() {
            const particlesContainer = document.querySelector('.hero-particles');
            for (let i = 0; i < 50; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.animationDelay = Math.random() * 3 + 's';
                particle.style.animationDuration = (Math.random() * 3 + 2) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // Crear partículas cuando se carga la página
        document.addEventListener('DOMContentLoaded', createParticles);

        // Funciones del modal
        function openModal(title, desc, empresa, empresaLogo, userLogo) {
            document.getElementById("modalTitle").innerText = title;
            document.getElementById("modalDesc").innerText = desc;
            document.getElementById("modalEmpresaName").innerText = empresa;
            document.getElementById("modalEmpresaLogo").src = empresaLogo;
            document.getElementById("jobModal").style.display = "block";
        }

        function closeModal() {
            document.getElementById("jobModal").style.display = "none";
        }

        window.onclick = function (event) {
            const modal = document.getElementById("jobModal");
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>

    <script>
        // Refrescar rápidamente el cache del cliente con las últimas vacantes publicadas
        (function refreshOfflineJobs() {
            fetch('/api/offline_jobs', { headers: { 'Accept': 'application/json' } })
                .then(resp => resp.ok ? resp.json() : [])
                .then(data => {
                    if (!Array.isArray(data)) return;
                    try {
                        localStorage.setItem('offline_jobs', JSON.stringify(data));
                    } catch (e) {}
                })
                .catch(() => {});
        })();
    </script>

    <script>
        if ("serviceWorker" in navigator) {
            navigator.serviceWorker.register("/service-worker.js")
                .then(() => console.log("✅ Service Worker registrado"))
                .catch(err => console.log("❌ Error registrando SW:", err));
        }

        // Guardar en localStorage como JSON válido (string)
        try {
            localStorage.setItem('jobs', JSON.stringify({{ jobs_json|safe }}));
        } catch (e) {}
        try {
            localStorage.setItem('offline_jobs', JSON.stringify({{ offline_jobs_json|safe }}));
        } catch (e) {}
    </script>

</body>

</html>