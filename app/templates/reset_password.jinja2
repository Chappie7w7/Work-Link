

{% block title %}{% endblock %}

{% block content %}
<div class="container">
    <div class="login-box">
        <div class="login-header">
            <img src="{{ url_for('static', filename='img/logo.png') }}" alt="Work-Link Logo" class="logo-img">
            <h2>Restablecer Contraseña</h2>
        </div>
        
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="alert alert-{{ category }}">
                        <i class="fas {% if category == 'success' %}fa-check-circle{% else %}fa-exclamation-circle{% endif %}"></i>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}
        
        <div class="recovery-info">
            <p>Crea una nueva contraseña segura para tu cuenta.</p>
        </div>
        
        <form method="post" class="recovery-form">
            <div class="form-group">
                <label for="password">Nueva contraseña:</label>
                <div class="input-with-icon">
                    <i class="fas fa-lock"></i>
                    <input type="password" id="password" name="password" placeholder="Ingresa tu nueva contraseña" required>
                </div>
            </div>
            
            <div class="form-group">
                <label for="confirm_password">Confirmar contraseña:</label>
                <div class="input-with-icon">
                    <i class="fas fa-lock"></i>
                    <input type="password" id="confirm_password" name="confirm_password" placeholder="Confirma tu nueva contraseña" required>
                </div>
                <div class="password-match-indicator" id="password-match"></div>
            </div>
            
            <button type="submit" class="btn-entrar">
                <i class="fas fa-check-circle"></i> Restablecer Contraseña
            </button>
        </form>
    </div>
</div>

<style>
    .login-box {
        max-width: 450px;
        margin: 50px auto;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        background: #fff;
    }
    
    .login-header {
        text-align: center;
        margin-bottom: 25px;
    }
    
    .login-header .logo-img {
        max-width: 120px;
        margin-bottom: 15px;
    }
    
    .login-header h2 {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 5px;
    }
    
    .recovery-info {
        text-align: center;
        margin-bottom: 20px;
        color: #7f8c8d;
    }
    
    .form-group {
        margin-bottom: 20px;
        position: relative;
    }
    
    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 500;
        color: #34495e;
    }
    
    .input-with-icon {
        position: relative;
    }
    
    .input-with-icon i {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #7f8c8d;
    }
    
    .input-with-icon input {
        padding-left: 40px;
        width: 100%;
        height: 45px;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 15px;
        transition: border-color 0.3s;
    }
    
    .input-with-icon input:focus {
        border-color: #3498db;
        outline: none;
        box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
    }
    
    .password-match-indicator {
        font-size: 12px;
        margin-top: 5px;
        height: 15px;
    }
    
    .password-match-success {
        color: #27ae60;
    }
    
    .password-match-error {
        color: #e74c3c;
    }
    
    .btn-entrar {
        width: 100%;
        height: 45px;
        background: #3498db;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .btn-entrar i {
        margin-right: 8px;
    }
    
    .btn-entrar:hover {
        background: #2980b9;
    }
    
    .alert {
        padding: 12px 15px;
        margin-bottom: 20px;
        border-radius: 5px;
        display: flex;
        align-items: center;
    }
    
    .alert i {
        margin-right: 10px;
        font-size: 18px;
    }
    
    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }
    
    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }
    
    .alert-warning {
        background-color: #fff3cd;
        color: #856404;
        border: 1px solid #ffeeba;
    }
    
    .alert-info {
        background-color: #d1ecf1;
        color: #0c5460;
        border: 1px solid #bee5eb;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const password = document.getElementById('password');
        const confirmPassword = document.getElementById('confirm_password');
        const passwordMatch = document.getElementById('password-match');
        
        function checkPasswordMatch() {
            if (confirmPassword.value === '') {
                passwordMatch.textContent = '';
                passwordMatch.className = 'password-match-indicator';
                return;
            }
            
            if (password.value === confirmPassword.value) {
                passwordMatch.textContent = '¡Las contraseñas coinciden!';
                passwordMatch.className = 'password-match-indicator password-match-success';
            } else {
                passwordMatch.textContent = 'Las contraseñas no coinciden';
                passwordMatch.className = 'password-match-indicator password-match-error';
            }
        }
        
        password.addEventListener('keyup', checkPasswordMatch);
        confirmPassword.addEventListener('keyup', checkPasswordMatch);
    });
</script>
{% endblock %}