{% import "components/flash_messages.jinja2" as flash %}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Administrador - WorkLink</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style_admin.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body>
    {{ flash.render_flash_messages() }}
    
    <!-- Navigation Bar -->
    <nav class="admin-navbar">
        <div class="nav-brand">
            <h1><i class="fas fa-shield-alt"></i> WorkLink Admin</h1>
        </div>
        <div class="nav-links">
            <a href="{{ url_for('AdminRoute.dashboard') }}" class="nav-link active">
                <i class="fas fa-users"></i> 
                <span>Usuarios</span>
            </a>
            <a href="{{ url_for('LoginRoute.logout') }}" class="btn-salir">
                <i class="fas fa-sign-out-alt"></i> Salir
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-container">
        <div class="page-header">
            <h2 class="page-title">Panel de Administración</h2>
            <p class="page-subtitle">Gestiona usuarios y cuentas del sistema</p>
        </div>

        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-icon blue">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-info">
                    <h3>{{ total_usuarios }}</h3>
                    <p>Total Usuarios</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon green">
                    <i class="fas fa-building"></i>
                </div>
                <div class="stat-info">
                    <h3>{{ total_empresas }}</h3>
                    <p>Empresas</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon orange">
                    <i class="fas fa-user-tie"></i>
                </div>
                <div class="stat-info">
                    <h3>{{ total_empleados }}</h3>
                    <p>Empleados</p>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon" style="background: #f59e0b;">
                    <i class="fas fa-user-slash"></i>
                </div>
                <div class="stat-info">
                    <h3>{{ total_solicitudes }}</h3>
                    <p>Solicitudes de eliminación</p>
                </div>
            </div>
        </div>

        <!-- Users Table -->
        <div class="users-section">
            <div class="section-header">
                <h3>Lista de Usuarios</h3>
                <div>
                    {% if current_filter == 'solicitudes' %}
                        <a href="{{ url_for('AdminRoute.dashboard') }}" class="btn-action" title="Ver todos" style="background:#334155;color:#fff;">
                            <i class="fas fa-list"></i> Ver todos
                        </a>
                    {% else %}
                        <a href="{{ url_for('AdminRoute.dashboard', f='solicitudes') }}" class="btn-action" title="Ver solicitudes de eliminación" style="background:#f59e0b;color:#fff;">
                            <i class="fas fa-user-slash"></i> Ver solicitudes
                        </a>
                    {% endif %}
                </div>
            </div>
            
            {% if usuarios %}
            <div class="table-container">
                <table class="users-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Tipo</th>
                            <th>Fecha Registro</th>
                            <th>Último Login</th>
                            <th>Premium</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for usuario in usuarios %}
                        <tr>
                            <td>{{ usuario.id }}</td>
                            <td>
                                <div class="user-info">
                                    {% if usuario.foto_perfil %}
                                    <img src="{{ usuario.foto_perfil }}" alt="{{ usuario.nombre }}" class="user-avatar">
                                    {% else %}
                                    <div class="user-avatar-placeholder">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    {% endif %}
                                    <span>{{ usuario.nombre }}</span>
                                </div>
                            </td>
                            <td>{{ usuario.correo }}</td>
                            <td>
                                <span class="badge badge-{{ 'empresa' if usuario.tipo_usuario == 'empresa' else 'empleado' }}">
                                    {% if usuario.tipo_usuario == 'empresa' %}
                                        <i class="fas fa-building"></i> Empresa
                                    {% elif usuario.tipo_usuario == 'empleado' %}
                                        <i class="fas fa-user-tie"></i> Empleado
                                    {% else %}
                                        {{ usuario.tipo_usuario }}
                                    {% endif %}
                                </span>
                            </td>
                            <td>
                                {% if usuario.fecha_registro %}
                                    {{ usuario.fecha_registro.strftime('%d/%m/%Y') }}
                                {% else %}
                                    N/A
                                {% endif %}
                            </td>
                            <td>
                                {% if usuario.ultimo_login %}
                                    {{ usuario.ultimo_login.strftime('%d/%m/%Y %H:%M') }}
                                {% else %}
                                    Nunca
                                {% endif %}
                            </td>
                            <td>
                                {% if usuario.premium %}
                                <span class="badge badge-premium">
                                    <i class="fas fa-crown"></i> Premium
                                </span>
                                {% else %}
                                <span class="badge badge-free">Gratis</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if usuario.aprobado %}
                                <span class="badge" style="background: #16a34a; color: white;">Aprobado</span>
                                {% else %}
                                <span class="badge" style="background: #f59e0b; color: white;">Deshabilitado</span>
                                {% endif %}
                                {% if usuario.solicitud_eliminacion %}
                                <span class="badge" style="background: #ef4444; color: white; margin-left:6px;">
                                    <i class="fas fa-user-slash"></i> Solicitud
                                </span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="action-buttons">
                                    {% if not usuario.aprobado %}
                                    <form method="POST" action="{{ url_for('AdminRoute.aprobar', usuario_id=usuario.id) }}" 
                                          style="display: inline;" 
                                          onsubmit="return confirm('¿Habilitar esta cuenta?');">
                                        <button type="submit" class="btn-action" title="Habilitar" style="background:#16a34a;color:#fff;">
                                            <i class="fas fa-check"></i>
                                        </button>
                                    </form>
                                    {% else %}
                                    <form method="POST" action="{{ url_for('AdminRoute.eliminar', usuario_id=usuario.id) }}" 
                                          style="display: inline;" 
                                          onsubmit="return confirm('¿Deshabilitar este usuario? No se eliminará, solo quedará deshabilitado.');">
                                        <button type="submit" class="btn-action btn-danger" title="Deshabilitar">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            {% else %}
            <div class="empty-state">
                <i class="fas fa-users-slash"></i>
                <h3>No hay usuarios registrados</h3>
                <p>No se han encontrado usuarios en el sistema.</p>
            </div>
            {% endif %}
        </div>
    </div>
</body>
    <script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
    <script>
        (function(){
            try {
                const socket = io('/notificaciones', { transports: ['websocket', 'polling'] });
                function showNotice(msg){
                    const box = document.createElement('div');
                    box.style.position = 'fixed';
                    box.style.top = '20px';
                    box.style.right = '20px';
                    box.style.zIndex = '9999';
                    box.style.background = '#f59e0b';
                    box.style.color = '#fff';
                    box.style.padding = '12px 16px';
                    box.style.borderRadius = '8px';
                    box.style.boxShadow = '0 8px 24px rgba(0,0,0,0.15)';
                    box.style.fontFamily = 'Inter, system-ui, sans-serif';
                    box.style.fontSize = '14px';
                    box.innerHTML = '<i class="fas fa-user-slash"></i> ' + msg;
                    document.body.appendChild(box);
                    setTimeout(()=>{ box.remove(); }, 6000);
                }
                socket.on('connect', ()=>{ /* conectado */ });
                socket.on('error', ()=>{ /* error de socket */ });
                socket.on('solicitud_eliminacion', (data)=>{
                    const nombre = data?.nombre || 'Usuario';
                    const correo = data?.correo ? ' ('+data.correo+')' : '';
                    showNotice('Nueva solicitud de eliminación de ' + nombre + correo);
                });
            } catch (e) { /* noop */ }
        })();
    </script>

</html>

