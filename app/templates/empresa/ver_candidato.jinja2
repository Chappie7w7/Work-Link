<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil del Candidato</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style_empresa.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <header>
        <div class="logo"></div>
        <h1><b>WorkLink</b></h1>
        <a href="{{ url_for('rt_empresa.dashboard') }}" class="btn-regresar">Volver al Dashboard</a>
    </header>

    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3>Perfil del Candidato</h3>
            </div>
            <div class="card-body">
                {% if usuario %}
                <div class="row mb-3">
                    <div class="col-md-3">
                        <img src="{{ usuario.foto_perfil if usuario.foto_perfil else url_for('static', filename='img/default-user.png') }}" 
                             alt="Foto de perfil" class="img-fluid rounded-circle" style="max-width: 150px;">
                    </div>
                    <div class="col-md-9">
                        <h4>{{ usuario.nombre }}</h4>
                        <p><strong>Correo:</strong> {{ usuario.correo }}</p>
                        <p><strong>Ubicaci√≥n:</strong> {{ usuario.ubicacion or 'No especificada' }}</p>
                        <p><strong>Fecha de registro:</strong> {{ usuario.fecha_registro.strftime('%d/%m/%Y') if usuario.fecha_registro else 'N/A' }}</p>
                    </div>
                </div>
                {% endif %}

                <hr>

                {% if empleado %}
                <div class="mb-4">
                    <h5>Educaci√≥n</h5>
                    <p>{{ empleado.educacion or 'No especificada' }}</p>
                </div>

                <div class="mb-4">
                    <h5>Experiencia</h5>
                    <p>{{ empleado.experiencia or 'No especificada' }}</p>
                </div>

                <div class="mb-4">
                    <h5>Habilidades</h5>
                    <p>{{ empleado.habilidades or 'No especificadas' }}</p>
                </div>

                <div class="mb-4">
                    <h5>Curr√≠culum</h5>
                    {% if empleado.curriculum_url %}
                        <a href="{{ empleado.curriculum_url }}" target="_blank" class="btn btn-sm btn-success">
                            üìÑ Descargar CV
                        </a>
                    {% else %}
                        <p class="text-muted">No ha subido CV</p>
                    {% endif %}
                </div>

                <div class="mb-4">
                    <p>
                        <strong>CV Destacado:</strong> 
                        {% if empleado.cv_destacado %}
                            <span class="badge bg-warning">‚≠ê S√≠</span>
                        {% else %}
                            <span class="badge bg-secondary">No</span>
                        {% endif %}
                    </p>
                </div>
                {% else %}
                <p class="text-muted">El candidato no ha completado su perfil.</p>
                {% endif %}

                <hr>

                <!-- Postulaciones del candidato -->
                <h5 class="mb-3">üìã Postulaciones a tus vacantes</h5>
                {% if postulaciones %}
                    {% for post in postulaciones %}
                    <div class="card mb-3">
                        <div class="card-body">
                            <h6 class="card-title">{{ post.vacante.titulo }}</h6>
                            <p class="mb-2"><strong>Fecha:</strong> {{ post.fecha_postulacion.strftime('%d/%m/%Y %H:%M') if post.fecha_postulacion else 'N/A' }}</p>
                            <p class="mb-2">
                                <strong>Estado actual:</strong> 
                                {% if post.estado == 'postulado' %}
                                    <span class="badge bg-info">üì© Postulado</span>
                                {% elif post.estado == 'visto' %}
                                    <span class="badge bg-primary">üëÅÔ∏è Visto</span>
                                {% elif post.estado == 'en_proceso' %}
                                    <span class="badge bg-warning">‚è≥ En proceso</span>
                                {% elif post.estado == 'rechazado' %}
                                    <span class="badge bg-danger">‚ùå Rechazado</span>
                                {% elif post.estado == 'contratado' %}
                                    <span class="badge bg-success">‚úÖ Contratado</span>
                                {% endif %}
                            </p>
                            {% if post.notas_empresa %}
                            <p class="mb-2"><strong>Notas:</strong> {{ post.notas_empresa }}</p>
                            {% endif %}

                            <!-- Formulario para cambiar estado -->
                            <form action="{{ url_for('rt_empresa.cambiar_estado_postulacion', postulacion_id=post.id) }}" method="POST" class="mt-3">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label for="estado_{{ post.id }}" class="form-label">Cambiar estado:</label>
                                        <select name="estado" id="estado_{{ post.id }}" class="form-select form-select-sm">
                                            <option value="postulado" {% if post.estado == 'postulado' %}selected{% endif %}>üì© Postulado</option>
                                            <option value="visto" {% if post.estado == 'visto' %}selected{% endif %}>üëÅÔ∏è Visto</option>
                                            <option value="en_proceso" {% if post.estado == 'en_proceso' %}selected{% endif %}>‚è≥ En proceso</option>
                                            <option value="rechazado" {% if post.estado == 'rechazado' %}selected{% endif %}>‚ùå Rechazado</option>
                                            <option value="contratado" {% if post.estado == 'contratado' %}selected{% endif %}>‚úÖ Contratado</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="notas_{{ post.id }}" class="form-label">Notas (opcional):</label>
                                        <input type="text" name="notas_empresa" id="notas_{{ post.id }}" class="form-control form-control-sm" placeholder="Agregar notas..." value="{{ post.notas_empresa or '' }}">
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary btn-sm mt-2">Actualizar Estado</button>
                            </form>
                        </div>
                    </div>
                    {% endfor %}
                {% else %}
                    <p class="text-muted">Este candidato no tiene postulaciones a tus vacantes.</p>
                {% endif %}

                <div class="text-end mt-4">
                    <a href="{{ url_for('rt_empresa.dashboard') }}" class="btn btn-secondary">Volver</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Mensajes flash -->
    {% with messages = get_flashed_messages(with_categories=true) %}
        {% if messages %}
            <div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
                {% for category, message in messages %}
                <div class="toast show align-items-center text-white bg-{{ 'success' if category == 'success' else 'danger' }} border-0" role="alert">
                    <div class="d-flex">
                        <div class="toast-body">{{ message }}</div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
                {% endfor %}
            </div>
        {% endif %}
    {% endwith %}
</body>
</html>
