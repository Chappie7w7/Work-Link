{% import "components/flash_messages.jinja2" as flash %}
{% import "components/navbar_empresa.jinja2" as navbar_empresa %}
{% import "components/footer.jinja2" as footer %}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil del Candidato</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style_empresa.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style_ver_candidato.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style_perfil.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>

<body>
    {{ navbar_empresa.navbar(empresa, usuario_empresa) }}
    {{ flash.render_flash_messages() }}

    <div class="main-container">
        <div class="page-header">
            <h2 class="page-title">Perfil del Candidato</h2>
            <p class="page-subtitle">Revisa la informaci√≥n del candidato y su historial de postulaciones</p>
        </div>

        <div class="candidate-layout">
            <div class="section-card candidate-profile-card">
                <div class="candidate-profile-header">
                    {% if usuario %}
                    <div class="candidate-avatar">
                        <img src="{{ usuario.foto_perfil if usuario.foto_perfil else url_for('static', filename='img/default-user.png') }}"
                             alt="Foto de perfil">
                    </div>
                    <div class="candidate-main-info">
                        <h3 class="candidate-name">{{ usuario.nombre }}</h3>
                        <div class="candidate-meta">
                            <div class="candidate-meta-item">
                                <i class="fas fa-envelope"></i>
                                <span>{{ usuario.correo }}</span>
                            </div>
                            <div class="candidate-meta-item">
                                <i class="fas fa-location-dot"></i>
                                <span>{{ usuario.ubicacion or 'No especificada' }}</span>
                            </div>
                            <div class="candidate-meta-item">
                                <i class="fas fa-calendar-alt"></i>
                                <span>Registrado el {{ usuario.fecha_registro.strftime('%d/%m/%Y') if usuario.fecha_registro else 'N/A' }}</span>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>

                {% if empleado %}
                <div class="candidate-info-grid">
                    <div class="candidate-info-block">
                        <h4><i class="fas fa-graduation-cap"></i> Educaci√≥n</h4>
                        <p>{{ empleado.educacion or 'No especificada' }}</p>
                    </div>

                    <div class="candidate-info-block">
                        <h4><i class="fas fa-briefcase"></i> Experiencia</h4>
                        <p>{{ empleado.experiencia or 'No especificada' }}</p>
                    </div>

                    <div class="candidate-info-block">
                        <h4><i class="fas fa-lightbulb"></i> Habilidades</h4>
                        <p>{{ empleado.habilidades or 'No especificadas' }}</p>
                    </div>

                    <div class="candidate-info-block">
                        <h4><i class="fas fa-file-pdf"></i> Curr√≠culum</h4>
                        {% if empleado.curriculum_url %}
                            <a href="{{ empleado.curriculum_url }}" target="_blank" class="btn-download-cv">
                                <i class="fas fa-download"></i> Descargar CV
                            </a>
                        {% else %}
                            <p class="candidate-muted">No ha subido CV</p>
                        {% endif %}
                    </div>

                    <div class="candidate-info-block">
                        <h4><i class="fas fa-star"></i> CV Destacado</h4>
                        <p>
                            {% if empleado.cv_destacado %}
                                ‚≠ê S√≠
                            {% else %}
                                No
                            {% endif %}
                        </p>
                    </div>
                </div>
                {% else %}
                <p class="candidate-muted">El candidato no ha completado su perfil.</p>
                {% endif %}
            </div>

            <div class="section-card candidate-applications-card">
                <div class="candidate-applications-header">
                    <h3>
                        <i class="fas fa-clipboard-list"></i>
                        Postulaciones a tus vacantes
                    </h3>
                </div>

                {% if postulaciones %}
                    <div class="candidate-applications-list">
                        {% for post in postulaciones %}
                        <div class="candidate-application-item">
                            <div class="candidate-application-main">
                                <div class="candidate-application-title">
                                    <h4>{{ post.vacante.titulo }}</h4>
                                    <span class="candidate-application-date">
                                        <i class="fas fa-clock"></i>
                                        {{ post.fecha_postulacion.strftime('%d/%m/%Y %H:%M') if post.fecha_postulacion else 'N/A' }}
                                    </span>
                                </div>

                                <div class="candidate-application-status">
                                    <span class="status-label">Estado actual:</span>
                                    {% if post.estado == 'postulado' %}
                                        <span>üì© Postulado</span>
                                    {% elif post.estado == 'visto' %}
                                        <span>üëÅÔ∏è Visto</span>
                                    {% elif post.estado == 'en_proceso' %}
                                        <span>‚è≥ En proceso</span>
                                    {% elif post.estado == 'rechazado' %}
                                        <span>‚ùå Rechazado</span>
                                    {% elif post.estado == 'contratado' %}
                                        <span>‚úÖ Contratado</span>
                                    {% endif %}
                                </div>

                                {% if post.notas_empresa %}
                                <p class="candidate-application-notes"><strong>Notas:</strong> {{ post.notas_empresa }}</p>
                                {% endif %}
                            </div>

                            <form action="{{ url_for('rt_empresa.cambiar_estado_postulacion', postulacion_id=post.id) }}" method="POST" class="candidate-status-form">
                                <div class="candidate-status-grid">
                                    <div class="candidate-status-field">
                                        <label for="estado_{{ post.id }}">Cambiar estado:</label>
                                        <select name="estado" id="estado_{{ post.id }}">
                                            <option value="postulado" {% if post.estado == 'postulado' %}selected{% endif %}>üì© Postulado</option>
                                            <option value="visto" {% if post.estado == 'visto' %}selected{% endif %}>üëÅÔ∏è Visto</option>
                                            <option value="en_proceso" {% if post.estado == 'en_proceso' %}selected{% endif %}>‚è≥ En proceso</option>
                                            <option value="rechazado" {% if post.estado == 'rechazado' %}selected{% endif %}>‚ùå Rechazado/Cancelar</option>
                                            <option value="contratado" {% if post.estado == 'contratado' %}selected{% endif %}>‚úÖ Contratado</option>
                                        </select>
                                    </div>
                                    <div class="candidate-status-field">
                                        <label for="notas_{{ post.id }}">Notas (opcional):</label>
                                        <input type="text" name="notas_empresa" id="notas_{{ post.id }}" placeholder="Agregar notas..." value="{{ post.notas_empresa or '' }}">
                                    </div>
                                </div>
                                <div class="candidate-status-actions">
                                    <button type="submit" class="btn-primary-small">Actualizar estado</button>
                                    {% if post.estado != 'rechazado' and post.estado != 'contratado' %}
                                    <button type="button" class="btn-danger-outline" onclick="cancelarPostulacion({{ post.id }})">
                                        <i class="fas fa-times"></i> Cancelar postulaci√≥n
                                    </button>
                                    {% endif %}
                                </div>
                            </form>
                        </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="empty-state">
                        <i class="fas fa-inbox"></i>
                        <p>Este candidato no tiene postulaciones a tus vacantes.</p>
                    </div>
                {% endif %}

                <div class="candidate-back">
                    <a href="{{ url_for('rt_empresa.dashboard') }}" class="btn-secondary-link">
                        <i class="fas fa-arrow-left"></i>
                        Volver al panel de empresa
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script>
        function cancelarPostulacion(postulacionId) {
            if (confirm('¬øEst√°s seguro de que deseas cancelar/rechazar esta postulaci√≥n? El candidato podr√° postularse nuevamente si lo desea.')) {
                // Encontrar el formulario correspondiente
                const form = document.querySelector(`form[action*="/postulacion/${postulacionId}/cambiar_estado"]`);
                if (form) {
                    // Establecer el estado a "rechazado"
                    const estadoSelect = form.querySelector('select[name="estado"]');
                    if (estadoSelect) {
                        estadoSelect.value = 'rechazado';
                    }
                    // Enviar el formulario
                    form.submit();
                }
            }
        }
    </script>

    {{ footer.footer() }}
</body>
</html>
