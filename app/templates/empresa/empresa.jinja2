{% import "components/flash_messages.jinja2" as flash %}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel Empresa</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style_empresa.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        .badge-header {
            display: none;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #ff4444 0%, #cc0000 100%);
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            font-size: 11px;
            font-weight: bold;
            margin-left: 8px;
            box-shadow: 0 2px 8px rgba(255, 68, 68, 0.4);
        }
        
        .pulse-animation {
            animation: pulse 0.6s ease-in-out;
        }
        
        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.2); }
        }
        
        .card-reportes {
            background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
            color: white;
            border: none;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .card-reportes::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: rotate 20s linear infinite;
        }
        
        @keyframes rotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        .card-reportes:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(99, 102, 241, 0.4);
        }
        
        .card-reportes .card-body {
            position: relative;
            z-index: 1;
        }
        
        .report-icon {
            font-size: 3rem;
            margin-bottom: 15px;
            display: block;
            animation: float 3s ease-in-out infinite;
        }
        
        @keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }
        
        .report-title {
            font-size: 1.2rem;
            font-weight: 700;
            margin-bottom: 10px;
        }
        
        .report-description {
            font-size: 0.85rem;
            opacity: 0.9;
            margin-bottom: 20px;
            line-height: 1.4;
        }
        
        .btn-generar-reporte {
            background: rgba(255, 255, 255, 0.2);
            border: 2px solid white;
            color: white;
            padding: 10px 20px;
            border-radius: 25px;
            font-weight: 600;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
            backdrop-filter: blur(10px);
        }
        
        .btn-generar-reporte:hover {
            background: white;
            color: #6366f1;
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(255, 255, 255, 0.3);
        }
    </style>
</head>

<body>
    {{ flash.render_flash_messages() }}
    <header>
        <div class="logo"></div>
        <h1><b>WorkLink</b></h1>
        <div style="display: flex; gap: 15px; align-items: center;">
            <a href="{{ url_for('rt_empresa.mensajes_empresa') }}" style="color: white; text-decoration: none; display: flex; align-items: center;">
                üí¨ Mensajes
                <span id="badge-mensajes-header" class="badge-header"></span>
            </a>
            <a href="{{ url_for('rt_empresa.notificaciones_empresa') }}" style="color: white; text-decoration: none; display: flex; align-items: center;">
                üîî Notificaciones
                <span id="badge-notificaciones-header" class="badge-header"></span>
            </a>
            <a href="{{ url_for('IndexRoute.index') }}" class="btn-regresar">Salir</a>
        </div>
    </header>

    <div class="container mt-4">
        <h2 class="mb-4">Panel de Empresa</h2>

        <!-- Dashboard resumen -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Ofertas activas</h5>
                        <p class="display-6">{{ ofertas_activas }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Postulantes totales</h5>
                        <p class="display-6">{{ postulantes_totales }}</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Estad√≠sticas</h5>
                        <p class="text-muted">En construcci√≥n</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center shadow-sm card-reportes">
                    <div class="card-body">
                        <span class="report-icon">üìä</span>
                        <h5 class="report-title">Generar Reporte</h5>
                        <p class="report-description">
                            Descarga un reporte completo de tus postulaciones, candidatos y estad√≠sticas
                        </p>
                        <a href="{{ url_for('rt_empresa.generar_reporte') }}" class="btn-generar-reporte">
                            üìÑ Descargar Reporte
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bot√≥n publicar -->
        <div class="text-end mb-3">
            <a href="{{ url_for('rt_empresa.publicar_empleo') }}" class="btn btn-primary">
                + Publicar empleo
            </a>
        </div>

        <div class="row">
            <!-- Ofertas laborales -->
            <div class="col-md-6">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-dark text-white">
                        Mis ofertas laborales
                    </div>
                    <div class="card-body">
                        {% if ofertas %}
                        <ul class="list-group">
                            {% for oferta in ofertas %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ oferta.titulo }}
                                <span class="badge bg-success">{{ oferta.estado }}</span>
                            </li>
                            {% endfor %}
                        </ul>
                        {% else %}
                        <p class="text-muted">No tienes ofertas activas.</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Candidatos -->
            <div class="col-md-6">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-dark text-white">
                        Postulantes recientes
                    </div>
                    <div class="card-body">
                        {% if candidatos %}
                        <ul class="list-group">
                            {% for c in candidatos %}
                            <li class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <div>
                                        <strong>{{ c.empleado.usuario.nombre if c.empleado and c.empleado.usuario else 'Candidato' }}</strong>
                                        <br>
                                        <small class="text-muted">{{ c.vacante.titulo if c.vacante else 'Vacante' }}</small>
                                    </div>
                                    <div>
                                        {% if c.estado == 'postulado' %}
                                            <span class="badge bg-info">üì© Postulado</span>
                                        {% elif c.estado == 'visto' %}
                                            <span class="badge bg-primary">üëÅÔ∏è Visto</span>
                                        {% elif c.estado == 'en_proceso' %}
                                            <span class="badge bg-warning">‚è≥ En proceso</span>
                                        {% elif c.estado == 'rechazado' %}
                                            <span class="badge bg-danger">‚ùå Rechazado</span>
                                        {% elif c.estado == 'contratado' %}
                                            <span class="badge bg-success">‚úÖ Contratado</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="{{ url_for('rt_empresa.ver_candidato', candidato_id=c.empleado_id) }}"
                                        class="btn btn-sm btn-outline-primary">Ver perfil completo</a>
                                </div>
                            </li>
                            {% endfor %}
                        </ul>
                        {% else %}
                        <p class="text-muted">No tienes postulantes recientes.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="{{ url_for('static', filename='js/notificaciones_empresa_tiempo_real.js') }}"></script>
</body>

</html>