{% import "components/flash_messages.jinja2" as flash %}
{% import "components/navbar_empresa.jinja2" as navbar_empresa %}
{% import "components/footer.jinja2" as footer %}
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publicar Empleo</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style_empresa.css') }}">
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style_publicar_empleo.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body>
    {{ navbar_empresa.navbar(empresa, usuario_empresa) }}
    {{ flash.render_flash_messages() }}

    <!-- Main Content -->
    <div class="main-container">
        <div class="page-header">
            <h2 class="page-title">
                <i class="fas fa-plus-circle"></i> Publicar Nuevo Empleo
            </h2>
            <p class="page-subtitle">Completa el formulario para crear una nueva vacante</p>
        </div>

        <div class="form-container">
            <div class="form-card">
                <div class="company-info">
                    <i class="fas fa-building"></i>
                    <div>
                        <strong>{{ usuario.nombre }}</strong>
                        <span>Empresa registrada</span>
                    </div>
                </div>

                <form action="{{ url_for('rt_empresa.nueva_vacante') }}" method="POST" id="vacanteForm">
                    <input type="hidden" name="empresa_id" value="{{ usuario.id }}">

                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-info-circle"></i> Información Básica
                        </h3>

                        <div class="form-group">
                            <label for="titulo">
                                <i class="fas fa-briefcase"></i> Título de la vacante *
                            </label>
                            <input type="text" id="titulo" name="titulo" maxlength="150" required
                                placeholder="Ej: Desarrollador Full Stack">
                        </div>

                        <div class="form-group">
                            <label for="descripcion">
                                <i class="fas fa-align-left"></i> Descripción *
                            </label>
                            <textarea id="descripcion" name="descripcion" rows="4" required
                                placeholder="Describe las responsabilidades principales del puesto..."></textarea>
                        </div>

                        <div class="form-group">
                            <label for="requisitos">
                                <i class="fas fa-check-circle"></i> Requisitos
                            </label>
                            <textarea id="requisitos" name="requisitos" rows="3"
                                placeholder="Lista los requisitos o habilidades necesarias..."></textarea>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-map-marker-alt"></i> Ubicación y Modalidad
                        </h3>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="ubicacion">
                                    <i class="fas fa-location-dot"></i> Ubicación
                                </label>
                                <input type="text" id="ubicacion" name="ubicacion" maxlength="255"
                                    placeholder="Ciudad, País">
                            </div>

                            <div class="form-group">
                                <label for="modalidad">
                                    <i class="fas fa-briefcase"></i> Modalidad
                                </label>
                                <select id="modalidad" name="modalidad">
                                    <option value="presencial">Presencial</option>
                                    <option value="remoto">Remoto</option>
                                    <option value="híbrido">Híbrido</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-dollar-sign"></i> Compensación
                        </h3>

                        <div class="form-group">
                            <label for="salario_aprox">
                                <i class="fas fa-money-bill-wave"></i> Salario mensual aproximado
                            </label>

                            <input type="number" id="salario_aprox" name="salario_aprox" placeholder="Ej: 4500" min="0"
                                step="any">

                            <small class="form-hint">Ingresa el monto mensual aproximado</small>
                        </div>

                    </div>

                    <div class="form-section">
                        <h3 class="section-title">
                            <i class="fas fa-cog"></i> Configuración
                        </h3>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="estado">
                                    <i class="fas fa-toggle-on"></i> Estado *
                                </label>
                                <select id="estado" name="estado" required>
                                    <option value="publicada">Publicada</option>
                                    <option value="cerrada">Cerrada</option>
                                    <option value="pausada">Pausada</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="max_postulantes">
                                    <i class="fas fa-users"></i> Límite de postulantes (opcional)
                                </label>
                                <input type="number" id="max_postulantes" name="max_postulantes" min="1"
                                    placeholder="Sin límite">
                                <small class="form-hint">Deja vacío para no establecer un límite. La vacante se pausará
                                    automáticamente al alcanzar este número.</small>
                            </div>
                        </div>

                        <div class="checkbox-group">
                            <label for="destacada" class="checkbox-label">
                                <input type="checkbox" id="destacada" name="destacada" value="true">
                                <span class="checkbox-custom"></span>
                                <span class="checkbox-text">
                                    <i class="fas fa-star"></i> Marcar como destacada
                                </span>
                            </label>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="button" class="btn-secondary" onclick="window.history.back()">
                            <i class="fas fa-times"></i> Cancelar
                        </button>
                        <button type="submit" class="btn-primary">
                            <i class="fas fa-paper-plane"></i> Publicar Empleo
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {{ footer.footer() }}

    <script src="{{ url_for('static', filename='js/notificaciones_empresa_tiempo_real.js') }}"></script>
</body>

</html>