
{% import "components/navbar.jinja2" as components %}
{% import "components/footer.jinja2" as footer %}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Empleos</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='css/style_empleos.css') }}">
</head>
<body>

    {{ components.navbar("empleos", "empleos", current_user) }}

    <div class="content">
        <h2 class="result-header">Empleos</h2>
        <p class="result-sub">774 resultados para <strong>"desarrollador"</strong> en Chiapas</p>

        <!-- Oferta destacada -->
        <div class="job-card">
            <div class="job-info">
                <span class="job-label">Destacado</span>
                <span class="job-title">Desarrollador Backend PHP</span>
                <span class="job-meta">Nova Studio · Tuxtla Gutiérrez</span>
            </div>
            <button class="job-button">Encontrar</button>
        </div>

        <!-- Empleos normales -->
        <div class="job-card">
            <div class="job-info">
                <span class="job-title">Decarrollador Web Junior</span>
                <span class="job-meta">TechoSoluciones · Ocosingo Chiapas</span>
            </div>
            <button class="job-button">Ver estado</button>
        </div>

        <div class="job-card">
            <div class="job-info">
                <span class="job-title">Desarrollador JavaScript</span>
                <span class="job-meta">Prototech · Comitán Chiapas</span>
            </div>
            <button class="job-button">Ver detalles</button>
        </div>

        <div class="job-card">
            <div class="job-info">
                <span class="job-title">Desarrollador Full Stack</span>
                <span class="job-meta">Bitcorp · San Cristóbal Chiapas</span>
            </div>
            <button class="job-button active">Más filtros</button>
        </div>

        <!-- Filtros -->
        <div class="filters">
            <button class="filter-btn">Región</button>
            <button class="filter-btn">Tipo de empleo</button>
            <button class="filter-btn">Fecha</button>
            <button class="filter-btn">Modalidad</button>
        </div>
    </div>

    {{ footer.footer() }}
</body>
</html>
